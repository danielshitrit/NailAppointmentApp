<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/myprimarycolor"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/nail"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/page_title"
            android:text="Select Service"
            android:textSize="@dimen/_20sdp"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:textColor="#5D5D5D"
            android:textStyle="bold" />

    </LinearLayout>
    <TextView
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="Logout"
        android:visibility="gone"
        android:textColor="#5D5D5D"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#5D5D5D"
        android:textStyle="bold"
        android:id="@+id/top"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:fontFamily="@font/micross"
        android:textAlignment="viewStart"
        android:layout_marginTop="@dimen/_70sdp"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_20sdp"
        android:text="Select the type of manicure service you want:" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="3dp"
                android:id="@+id/cd1"
                app:contentPadding="5dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="#F5F5F5"
                android:background="@color/cardview_shadow_end_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:elevation="0dp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:layout_margin="@dimen/_2sdp"
                        >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:src="@color/myprimarycolor"
                                />


                            <ImageView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_centerInParent="true"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/m1"
                                app:riv_corner_radius="@dimen/_5sdp"
                                app:tint="@color/textColor" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColor"
                            android:textStyle="bold"
                            android:fontFamily="@font/micross"
                            android:textSize="@dimen/_15sdp"
                            android:text="Nail Manicure " />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#A3A3A3"
                            android:textStyle="bold"
                            android:fontFamily="@font/micross"
                            android:textSize="@dimen/_11sdp"
                            android:text="Price $20 " />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/viewitembarcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="53dp"
                    android:textColor="@color/textColor"
                    android:visibility="gone"
                    android:layout_marginLeft="50dp"
                    android:layout_toEndOf="@+id/viewitembarcodename"
                    android:text="TextView" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="3dp"
                android:id="@+id/cd2"
                app:contentPadding="5dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="#F5F5F5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:elevation="0dp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:layout_margin="@dimen/_2sdp"
                        >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:src="@color/myprimarycolor"
                                />


                            <ImageView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_centerInParent="true"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/m2"
                                android:tint="@color/textColor"
                                app:riv_corner_radius="@dimen/_5sdp" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColor"
                            android:textStyle="bold"
                            android:fontFamily="@font/micross"
                            android:textSize="@dimen/_15sdp"
                            android:text="Soft Gel Manicure " />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#A3A3A3"
                            android:textStyle="bold"
                            android:fontFamily="@font/micross"
                            android:textSize="@dimen/_11sdp"
                            android:text="Price $10 " />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/viewitembarcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="53dp"
                    android:textColor="@color/textColor"
                    android:visibility="gone"
                    android:layout_marginLeft="50dp"
                    android:layout_toEndOf="@+id/viewitembarcodename"
                    android:text="TextView" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="3dp"
                android:id="@+id/cd3"
                app:contentPadding="5dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="#F5F5F5"
                android:background="@color/cardview_shadow_end_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:elevation="0dp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:layout_margin="@dimen/_2sdp"
                        >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:src="@color/myprimarycolor"
                                />

                            <ImageView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_centerInParent="true"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/m3"
                                app:riv_corner_radius="@dimen/_5sdp"
                                app:tint="@color/textColor" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColor"
                            android:textStyle="bold"
                            android:fontFamily="@font/micross"
                            android:textSize="@dimen/_15sdp"
                            android:text="Hard Gel Manicure " />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#A3A3A3"
                            android:textStyle="bold"
                            android:fontFamily="@font/micross"
                            android:textSize="@dimen/_11sdp"
                            android:text="Price $25 " />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/viewitembarcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="53dp"
                    android:textColor="@color/textColor"
                    android:visibility="gone"
                    android:layout_marginLeft="50dp"
                    android:layout_toEndOf="@+id/viewitembarcodename"
                    android:text="TextView" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="3dp"
                android:id="@+id/cd4"
                app:contentPadding="5dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="#F5F5F5"
                android:background="@color/cardview_shadow_end_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:elevation="0dp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:layout_margin="@dimen/_2sdp"
                        >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:src="@color/myprimarycolor"
                                />

                            <ImageView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_centerInParent="true"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/m4"
                                app:riv_corner_radius="@dimen/_5sdp"
                                app:tint="@color/textColor" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColor"
                            android:textStyle="bold"
                            android:fontFamily="@font/micross"
                            android:textSize="@dimen/_15sdp"
                            android:text="Acrylic Manicure " />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#A3A3A3"
                            android:textStyle="bold"
                            android:fontFamily="@font/micross"
                            android:textSize="@dimen/_11sdp"
                            android:text="Price $15 " />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/viewitembarcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="53dp"
                    android:textColor="@color/textColor"
                    android:visibility="gone"
                    android:layout_marginLeft="50dp"
                    android:layout_toEndOf="@+id/viewitembarcodename"
                    android:text="TextView" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_50sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/button"
        android:text="Next"
        android:textColor="#5D5D5D"
        android:textSize="@dimen/_11sdp"
        android:textStyle="bold" />
</RelativeLayout>